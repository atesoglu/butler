{
  "name": "butler",
  "description": "A modern Electron desktop application built with React, TypeScript, and Carbon Design System",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron-main.cjs",
  "author": "Butler Team",
  "license": "MIT",
  "homepage": "https://github.com/your-org/butler#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/butler.git"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "carbon-design-system",
    "desktop-app",
    "vite"
  ],
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "electron:build": "electron-builder",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss,json}\"",
    "clean": "rimraf dist node_modules/.vite",
    "preview": "vite preview"
  },
  "dependencies": {
    "@carbon/icons-react": "^11.62.0",
    "@carbon/react": "^1.85.1",
    "@carbon/themes": "^11.55.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "sass": "^1.89.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
